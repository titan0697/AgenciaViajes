.row.proximos-viajes
    each viaje in viajes
        .col-md-6.col-lg-4.mb-4
            .card
                img.card-img-top(src=`img/destinos_${viaje.imagen}.jpg`)
                .card-body
                    h2= viaje.titulo
                    p
                        svg.icon.icon-tabler.icon-tabler-calendar-code(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#fd0061' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            path(d='M11.5 21h-5.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v6')
                            path(d='M16 3v4')
                            path(d='M8 3v4')
                            path(d='M4 11h16')
                            path(d='M20 21l2 -2l-2 -2')
                            path(d='M17 17l-2 2l2 2')

                        | #{viaje.fecha_ida} - #{viaje.fecha_vuelta}                 
                    p 
                        svg.icon.icon-tabler.icon-tabler-user-circle(xmlns='http://www.w3.org/2000/svg' width='44' height='44' viewbox='0 0 24 24' stroke-width='1.5' stroke='#fd0061' fill='none' stroke-linecap='round' stroke-linejoin='round')
                            path(stroke='none' d='M0 0h24v24H0z' fill='none')
                            path(d='M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0')
                            path(d='M12 10m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0')
                            path(d='M6.168 18.849a4 4 0 0 1 3.832 -2.849h4a4 4 0 0 1 3.834 2.855')

                        | #{viaje.disponibles} Disponibles
                    p= viaje.descripcion.substr(0, 100) + '...'

