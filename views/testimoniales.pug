extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}

        blockquote.text-center Lee sobre nuestros clientes
        include ./layout/bloque_testimoniales


        .row 

        .col-md-12
            h2.d-block.w-100.text-center Agrega un comentario

            if (errores)
                each error in errores
                    .alert.col.alert-danger.text-center= error.mensaje

        .row.justify-content-center.col
            .col-md-8 
                form(action="/testimoniales" method="POST")
                    .form-group 
                        label(for="nombre") Nombre
                        input#nombre(type="text", placeholder="Nombre", name="nombre", class="form-control", value= nombre)
            
                    .form-group 
                        label(for="correo") Correo Electr√≥nico
                        input#correo(type="text", placeholder="Correo", name="correo", class="form-control", value= correo)

                    .form-group 
                        label(for="mensaje") Mensaje
                        textarea#mensaje(class="form-control", placeholder="Mensaje", name="mensaje", rows=3)= mensaje

                    input.btn.btn-success.btn-block(type="submit")